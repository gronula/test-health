mixin picture(className, {minWidth, desktopName, mobileName, imgClass, alt, isSVG = false, svgName})
  if isSVG
    span.media-obj(class=[className, imgClass])
      svg(xmlns=`http://www.w3.org/2000/svg`)
        use(href=`assets/img/sprite.svg#${svgName}`)
  else
    div.media-obj(class=[className, imgClass])
      picture
        source(
          type=`image/webp`
          media=`(min-width: ${minWidth})`
          srcset=`assets/img/${desktopName}@1x.webp 1x, assets/img/${desktopName}@2x.webp 2x`
        )
        source(
          type=`image/webp`
          srcset=`assets/img/${mobileName}@1x.webp 1x, assets/img/${mobileName}@2x.webp 2x`
        )
        source(
          media=`(min-width: ${minWidth})`
          srcset=`assets/img/${desktopName}@1x.png 1x, assets/img/${desktopName}@2x.png 2x`
        )
        img(
          src=`assets/img/${mobileName}@1x.png`
          srcset=`assets/img/${mobileName}@1x.png 1x, assets/img/${mobileName}@2x.png 2x`
          alt=alt
        )
